    "custom_liquid_id74La": {
      "type": "custom-liquid",
      "settings": {
        "custom_liquid": "<div class=\"page-width\">\n\t<div class=\"container\" style=\"display: flex; justify-content: center;\">\n\t  <div class=\"collections-wrapper\" style=\"display: flex; flex-wrap: wrap; justify-content: flex-start;\">\n\t\t{% assign sorted_collections = collections | sort: 'id' | reverse %}\n\t\t{% for collection in sorted_collections %}\n\t\t  {% assign start_time = collection.metafields.custom.pre_order_start_time | date: \"%Y-%m-%d\" %}\n\t\t  {% assign now_time = \"now\" | date: \"%Y-%m-%d\" %}\n\n\t\t  {% assign start_time_seconds = start_time | date: \"%s\" %}\n\t\t  {% assign now_time_seconds = now_time | date: \"%s\" %}\n\n\t\t  {% assign difference_seconds = start_time_seconds | minus: now_time_seconds %}\n\t\t  {% assign difference_days = difference_seconds | divided_by: 86400 %}\n\n\t\t  {% if difference_days >= -3 %}\n\t\t\t{% assign show_new_label = true %}\n\t\t  {% else %}\n\t\t\t{% assign show_new_label = false %}\n\t\t  {% endif %}\n\n\t\t  {% assign end_time = collection.metafields.custom.pre_order_end_time | date: \"%Y-%m-%d\" %}\n\t\t  {% assign end_time_seconds = end_time | date: \"%s\" %}\n\t\t  {% assign now_time_seconds = \"now\" | date: \"%s\" %}\n\t\t  {% assign difference_seconds = end_time_seconds | minus: now_time_seconds %}\n\t\t  {% assign remaining_days = difference_seconds | divided_by: 86400 %}\n\n\t\t  {% assign products_count = collection.products.size %}  <!-- Count the number of products in the collection -->\n\t\t  {% assign has_images = false %} <!-- Flag to track if the collection has images -->\n\n\t\t  {% for product in collection.products %}\n\t\t\t{% if product.images.size > 0 %}\n\t\t\t  {% assign has_images = true %}\n\t\t\t  {% break %}\n\t\t\t{% endif %}\n\t\t  {% endfor %}\n\n\t\t  {% if end_time >= now_time and products_count > 0 and has_images %}  <!-- Only display the collection card if end time hasn't passed, there are products in the collection, and the collection has images -->\n\t\t\t<div class=\"collection-card\" style=\"text-align: center; margin-bottom: 10px; margin-right: 10px; border: 1px solid #ccc; border-radius: 10px; padding: 10px; position: relative;\">\n\t\t\t  <div class=\"image-carousel\">\n\t\t\t\t<div class=\"carousel-control prev\" onclick=\"event.stopPropagation()\">&#10094;<\/div> <!-- 左箭頭控制項 -->\n\t\t\t\t{% for product in collection.products %}\n\t\t\t\t  {% for image in product.images %}\n\t\t\t\t\t<img class=\"carousel-image\" src=\"{{ image.src | img_url: '250x', scale: 2 }}\" alt=\"{{ product.title }}\">\n\t\t\t\t  {% endfor %}\n\t\t\t\t{% endfor %}\n\t\t\t\t<div class=\"carousel-control next\" onclick=\"event.stopPropagation()\">&#10095;<\/div> <!-- 右箭頭控制項 -->\n\t\t\t\t<div class=\"zoom-icon\" data-card-id=\"{{ forloop.index0 }}\" style=\"position: absolute; top: 10px; right: 10px; cursor: pointer;\"><img src=\"https:\/\/cdn.shopify.com\/s\/files\/1\/0871\/8991\/3879\/files\/magnifying-glass.png\" alt=\"放大镜图标\"><\/div>\n\t\t\t\t<div class=\"zoom-image\" id=\"zoom-image-{{ forloop.index0 }}\" style=\"position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.8); display: none; z-index: 999;\">\n\t\t\t\t\t<img class=\"zoomed-image\" src=\"\" alt=\"放大后的图片\" style=\"position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); max-width: 100%; max-height: 100%; width: auto; height: auto;\">\n\t\t\t\t\t<p class=\"close-icon\" style=\"cursor: pointer; position: absolute; top: 5px; right: 5px; z-index: 1000; color: #fff; font-size: 24px; background-color: rgba(0, 0, 0, 0.5); padding: 5px; border-radius: 5px;\">Close [X]<\/p>\n\t\t\t\t<\/div>\n\t\t\t  <\/div>\n\t\t\t  <a href=\"{{ collection.url }}\">\n\t\t\t\t<h2 class=\"collection-title\">{{ collection.title }}<\/h2>\n\t\t\t\t<p style=\"margin-bottom: 0; font-size: 14px;\">Deadline: {{ end_time }}<\/p>\n        <span class=\"pre-order-end-time-wrapper\">\n          {% assign remaining_days_plus_one = remaining_days | plus: 1 %}\n          {% if remaining_days_plus_one == 0 %}\n            <span class=\"pre-order-end-time\">Last Day!<\/span>\n          {% else %}\n            <span class=\"pre-order-end-time\">{{ remaining_days_plus_one }} Days Left<\/span>\n          {% endif %}\n        <\/span>\n        \n\t\t\t\t{% if show_new_label %}\n\t\t\t\t  <div class=\"new-label\">NEW<\/div>\n\t\t\t\t{% endif %}\n\t\t\t  <\/a>\n\t\t\t<\/div>\n\t\t  {% endif %}\n\t\t{% endfor %}\n\t  <\/div>\n\t<\/div>\n<\/div>\n\n<style>\n\/* General Styles *\/\n\n\n\n\n\/* Collection Card *\/\n\n.collection-card {\n  \/* Styles for collection cards *\/\n}\n\n\/* Collection Image Container *\/\n\n.collection-image-container:hover {\n  transform: scale(1.1);\n}\n\n.collection-image-container:hover .overlay {\n  opacity: 1;\n}\n\n\/* New Label *\/\n\n.new-label {\n  position: absolute;\n  top: 0px;\n  left: 0px;\n  background-color: #ff0000;\n  color: #ffffff;\n  padding: 5px;\n  font-weight: bold;\n  border-radius: 5px;\n  z-index: 1;\n}\n\n\/* Image Carousel *\/\n\n.image-carousel {\n  display: flex;\n  align-items: flex-start;\n  overflow: hidden;\n  width: 250px;\n  height: 250px;\n  border-radius: 10px;\n  margin-bottom: 10px;\n  position: relative;\n  user-select: none;\n}\n\n.carousel-image {\n  width: 100%;\n  height: auto;\n  object-fit: cover;\n  transition: transform 0.5s ease;\n  user-select: none;\n}\n\n.carousel-image:hover {\n  transform: scale(1.1);\n}\n\n.carousel-control {\n  position: absolute;\n  top: 50%;\n  transform: translateY(-50%);\n  background-color: rgba(255, 255, 255, 0.5);\n  color: #000;\n  font-size: 24px;\n  cursor: pointer;\n  z-index: 2;\n  padding: 10px;\n  user-select: none;\n}\n\n.carousel-control.prev {\n  left: 0px;\n}\n\n.carousel-control.next {\n  right: 0px;\n}\n\n\/* Pre-Order End Time *\/\n\n.pre-order-end-time-wrapper {\n  display: inline-block;\n  width: 100%;\n  padding: 3px 3px;\n  background-color: #F8C9B7;\n  border-radius: 20px;\n}\n\n@keyframes blink {\n  0%,\n  90%,\n  100% {\n    opacity: 1;\n  }\n  90.1%,\n  95% {\n    opacity: 0.1;\n  }\n}\n\n.pre-order-end-time {\n  animation: blink 3s infinite, fontSizeChange 0s infinite;\n}\n\n\/* Links *\/\n\na {\n  color: black;\n  text-decoration: none;\n}\n\n\/* Media Queries *\/\n\n@media only screen and (max-width: 767px) {\n  .banner__media img {\n    height: auto !important;\n    width: auto !important;\n  }\n\n\n\n  .collection-card {\n    width: calc(100vw - 70px);\n    margin-bottom: 20px;\n  }\n\n  .image-carousel {\n    width: 100%;\n\tpadding-bottom: 100%; \/* 设置底部内边距为100%，使高度与宽度相等 *\/\n\n  }\n}\n\n@media only screen and (min-width: 768px) {\n  .collection-title {\n    max-width: 250px;\n  }\n}\n\n\/* Zoom Icons *\/\n\n.zoom-icon img {\n  width: 20px;\n  height:\n}\n\n.hidden {\n  display: none !important;\n}\n\n<\/style>\n\n<script>\n\/\/ 自动播放轮播图\nvar carousels = document.querySelectorAll('.image-carousel');\nif (carousels) {\n    carousels.forEach(function(carousel) {\n        var images = carousel.querySelectorAll('.carousel-image');\n        var currentIndex = 0;\n        var autoplayInterval; \/\/ 定义变量保存自动播放定时器\n\n        \/\/ 自动播放函数\n        function startAutoplay() {\n            autoplayInterval = setInterval(function() {\n                images[currentIndex].style.display = 'none';\n                currentIndex = (currentIndex + 1) % images.length;\n                images[currentIndex].style.display = 'block';\n            }, 5000); \/\/ 每 5 秒播放一次\n        }\n\n        \/\/ 开始自动播放\n        startAutoplay();\n\n        \/\/ 鼠标停留事件\n        carousel.addEventListener('mouseenter', function() {\n            clearInterval(autoplayInterval); \/\/ 清除自动播放定时器\n        });\n\n        \/\/ 鼠标离开事件\n        carousel.addEventListener('mouseleave', function() {\n            \/\/ 重新开始自动播放\n            startAutoplay();\n        });\n\n        \/\/ 左箭头控制项点击事件\n        carousel.querySelector('.prev').addEventListener('click', function(event) {\n            images[currentIndex].style.display = 'none';\n            currentIndex = (currentIndex - 1 + images.length) % images.length;\n            images[currentIndex].style.display = 'block';\n            clearInterval(autoplayInterval); \/\/ 清除自动播放定时器\n        });\n\n        \/\/ 右箭头控制项点击事件\n        carousel.querySelector('.next').addEventListener('click', function(event) {\n            images[currentIndex].style.display = 'none';\n            currentIndex = (currentIndex + 1) % images.length;\n            images[currentIndex].style.display = 'block';\n            clearInterval(autoplayInterval); \/\/ 清除自动播放定时器\n        });\n\n        \/\/ 放大镜点击事件\n        carousel.querySelector('.zoom-icon').addEventListener('click', function(event) {\n            \/\/ 存储原始的 overflow 值\n            var originalOverflow = document.body.style.overflow;\n            \/\/ 获取当前显示图片的src\n            var currentImageSrc = images[currentIndex].getAttribute('src');\n            \/\/ 创建一个新的图片元素\n            var zoomedImage = new Image();\n            \/\/ 设置放大后的图片的src为当前显示图片的src\n            zoomedImage.src = currentImageSrc;\n\n            \/\/ 监听图片加载完成事件\n            zoomedImage.onload = function() {\n                \/\/ 显示放大图片容器\n                document.querySelector('.zoom-image').style.display = 'block';\n                \/\/ 设置放大图片的src为加载完成的图片\n                document.querySelector('.zoomed-image').src = zoomedImage.src;\n\n                \/\/ 计算放大比例，假设放大1.5倍\n                var scale = 1.5;\n                \/\/ 计算放大后图片的宽度和高度\n                var screenWidth = window.innerWidth;\n                var screenHeight = window.innerHeight;\n                var imageWidth = zoomedImage.naturalWidth * scale;\n                var imageHeight = zoomedImage.naturalHeight * scale;\n\n                \/\/ 判断是否超出屏幕宽度或高度，如果是则按比例缩小图片大小\n                if (imageWidth > screenWidth || imageHeight > screenHeight) {\n                    \/\/ 计算宽度和高度的缩放比例\n                    var widthScale = screenWidth \/ imageWidth;\n                    var heightScale = screenHeight \/ imageHeight;\n                    \/\/ 选择较小的缩放比例\n                    var minScale = Math.min(widthScale, heightScale);\n                    \/\/ 根据缩放比例调整图片大小\n                    imageWidth *= minScale;\n                    imageHeight *= minScale;\n                }\n\n                \/\/ 设置放大后图片的大小\n                document.querySelector('.zoomed-image').style.width = imageWidth + 'px';\n                document.querySelector('.zoomed-image').style.height = imageHeight + 'px';\n\n                \/\/ 禁止页面滚动\n                document.body.style.overflow = 'hidden';\n            };\n\n            \/\/ 监听点击放大图片外部的事件\n            document.querySelector('.zoom-image').addEventListener('click', function(event) {\n                if (event.target === document.querySelector('.zoom-image')) {\n                    \/\/ 点击了放大图片外部，执行退出操作\n                    exitZoom();\n                }\n            });\n\n            \/\/ 监听键盘事件，按下 ESC 键退出\n            window.addEventListener('keydown', function(event) {\n                if (event.key === 'Escape') {\n                    \/\/ 按下 ESC 键，执行退出操作\n                    exitZoom();\n                }\n            });\n\t\t\t\n\t\t\t\/\/ 关闭按钮点击事件\n\t\t\tcarousel.querySelector('.close-icon').addEventListener('click', function(event) {\n\t\t\t\texitZoom();\n\n\t\t\t});\n        });\n\n        \/\/ 退出放大画面的函数\n        function exitZoom() {\n            \/\/ 隐藏放大图片容器\n            document.querySelector('.zoom-image').style.display = 'none';\n            \/\/ 在需要恢复时，将 overflow 设置回原始值\n            console.log(\"document.body.style.overflow 的值为：\", document.body.style.overflow);\n            document.body.style.overflow = null;\n\t\t\tconsole.log(\"document.body.style.overflow = \",document.body.style.overflow);\n\t\t\t\/\/ 更新最后看的图片到轮播器\n\t\t\timages[currentIndex].style.display = 'none';\n\t\t\tcurrentIndex = Array.from(images).findIndex(image => image.src === document.querySelector('.zoomed-image').src);\n\t\t\timages[currentIndex].style.display = 'block';\n        }\n    });\n}\n<\/script>",
